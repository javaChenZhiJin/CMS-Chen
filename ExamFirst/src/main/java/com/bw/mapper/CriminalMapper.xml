<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bw.mapper.CriminalMapper">
       <select id="getList" resultType="map">
            SELECT * FROM criminal WHERE cname like '%${value}%'
       </select>
       
       <insert id="saveRole">
          insert into criminal set cname=#{cname},cno=#{cno},cdesc=#{cdesc},sex=#{sex},age=${age}
       </insert>
       
       
        <select id="getOne" resultType="com.bw.entity.Criminal">
            SELECT * FROM criminal WHERE cid =${value}
       </select>
       
       
       <update id="updateRole">
          update criminal set cname=#{cname},cno=#{cno},cdesc=#{cdesc},sex=#{sex},age=${age} where cid=${cid}
       </update>
       
       <delete id="delRole">
         delete from criminal where cid=${value}
       </delete>
</mapper>